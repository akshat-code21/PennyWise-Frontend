<%- include('partials/header') %>

<div class="px-20 flex flex-1 justify-center py-5">
    <%- include('partials/buttons') %>
    <script>
        const detail = document.querySelector('.Insights');
        detail.style.backgroundColor = '#019863';
        detail.style.color = 'white';
    </script>

    <div class="layout-content-container flex flex-col max-w-[960px] flex-1 pt-3">
        <!-- <h1 class="text-3xl font-bold text-[#40916c] mb-8">Financial Insights</h1> -->

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-lg font-semibold text-[#40916c]">Monthly Total</h3>
                <p id="totalSpending" class="text-2xl font-bold">₹0</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-lg font-semibold text-[#40916c]">Highest Expense</h3>
                <p id="highestExpense" class="text-2xl font-bold">₹0</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h3 class="text-lg font-semibold text-[#40916c]">Lowest Expense</h3>
                <p id="lowestExpense" class="text-2xl font-bold">₹0</p>
            </div>
        </div>

        <!-- Charts -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <canvas id="categoryChart"></canvas>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <canvas id="monthlyChart"></canvas>
            </div>
        </div>
    </div>
</div>



<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
<script src="/scripts/insightsScript.js"></script>
<script src="/scripts/header.js"></script>
<%- include('partials/end') %> 